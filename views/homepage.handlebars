<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money"></span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{post.text}}</span>
      
    </p>

    {{log post}}
    <p>Created by {{post.user.name}} on {{format_date post.createdAt}}</p>
    
  </div>
  <div class="col-md-7">
    {{!-- <p>
      {{post.description}}
    </p> --}}
  </div>
</div>
{{/each}}
